{
  "name": "law-student-assistant",
  "version": "1.0.0",
  "description": "مساعد طلبة الحقوق الذكي - تطبيق سطح المكتب",
  "main": "main.js",
  "author": "Law Student Assistant Team",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --env=development",
    "server": "node server.js",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.lawstudent.assistant",
    "productName": "مساعد طلبة الحقوق الذكي",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!src/**/*",
      "!.git/**/*",
      "!README.md",
      "!.gitignore"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.education"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Education"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "language": "Arabic"
    }
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "body-parser": "^2.2.0",
    "express": "^4.18.3"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
